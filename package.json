{
  "name": "specify-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for Specify Frontend packages and applications",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "lint": "pnpm --filter \"./packages/*\" --filter \"./apps/*\" run lint",
    "test": "pnpm --filter \"./packages/*\" --filter \"./apps/*\" run test",
    "build": "pnpm --filter \"./packages/*\" --filter \"./apps/*\" run build",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "workspace:test": "pnpm --filter \"./packages/*\" --filter \"./apps/*\" test",
    "filter:ui": "pnpm --filter \"@company/ui\"",
    "filter:utils": "pnpm --filter \"@company/utils\"",
    "build:all": "pnpm --filter \"./packages/*\" --filter \"./apps/*\" run build",
    "test:changed": "pnpm --filter \"{packages/**/*,apps/**/*}\" --filter \"...[origin/main]\" test"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.23.0"
}
